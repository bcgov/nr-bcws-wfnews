import { OnInit } from "@angular/core";
import { Store } from "@ngrx/store";
import { DefaultSort } from "../../models/sort/default-sort";
import { SortDirection } from "../../models/sort/sort-direction";
import { SortOption } from "../../models/sort/sort-option";
import { SearchState } from "../../store/state";
export declare class SortComponent implements OnInit {
    private store;
    defaultSort: DefaultSort;
    options: SortOption[];
    componentId: string;
    isVisible: boolean;
    activeSortParam: string;
    activeSortDir: SortDirection;
    constructor(store: Store<SearchState>);
    ngOnInit(): void;
    setVisiblility(): void;
    setDefaultSort(): void;
    updateSort(option: SortOption): void;
    close(): void;
    toggleSortDirection: (dir: SortDirection) => "ASC" | "DESC";
    isActiveParam: (param: string) => boolean;
    isActiveDir: (dir: SortDirection) => boolean;
    showArrow: (param: string, dir: SortDirection) => boolean;
}
