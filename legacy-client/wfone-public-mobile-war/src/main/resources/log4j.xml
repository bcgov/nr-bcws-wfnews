<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <!-- This property can be set in catalina.properties
         and it will override it for local development if the logs need to be put elsewhere -->
    <Appenders>
        <RollingFile name="file"
                     fileName="${dollar}{sys:logging.home.dir}${dollar}{sys:file.separator}wfim${dollar}{sys:file.separator}wfone-public-mobile-war.log"
                     encoding="UTF-8"
                     filePattern="${dollar}{sys:logging.home.dir}${dollar}{sys:file.separator}wfim${dollar}{sys:file.separator}wfone-public-mobile-war.%d.log.gz"
                     ignoreExceptions="false"
                     immediateFlush="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p: %X{requestId} %c %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="500 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="${dollar}{sys:logging.home.dir}${dollar}{sys:file.separator}" maxDepth="2">
                    <IfFileName glob="${dollar}{sys:logging.home.dir}${dollar}{sys:file.separator}wfim${dollar}{sys:file.separator}wfone-public-mobile-war.%d.log.gz" />
                    <IfLastModified age="20d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p: %X{requestId} %c %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="file"/>
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="ca.bc.gov.nrs.wfim" level="DEBUG">
            <AppenderRef ref="file"/>
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>